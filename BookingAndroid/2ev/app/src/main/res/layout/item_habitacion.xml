<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="90dp"
    android:layout_marginRight="90dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/backgroundtarjetas"
    >


    <TextView
        android:id="@+id/numeroHabitacion"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true" />
    <TextView
        android:id="@+id/disponible"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true" />
    <TextView
        android:id="@+id/precioHabitacion"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true" />
    <TextView
        android:id="@+id/capacidadHabitacion"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true" />


    <TextView
        android:id="@+id/descripcionHabitacion"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAllCaps="true" />


    <Button
        android:id="@+id/buttonReserva"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Reservar"

        />


</LinearLayout>